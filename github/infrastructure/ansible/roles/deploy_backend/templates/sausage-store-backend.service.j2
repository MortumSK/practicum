[Unit]
Description=Sausage-store

[Service]
User=jarservice
Environment=REPORT_PATH=/tmp
Environment=LOG_PATH=/tmp
StandardOutput=file:/tmp/out.log
Restart=always
ExecStart=/bin/java \
-Dmyserver.basePath='/var/jarservice' \
-Dmyserver.bindAddr='127.0.0.1' \
-Dmyserver.bindPort='8081' \
-Dmyserver.hostName='Sausage-store' \
-jar '/var/jarservice/sausage-store.jar'
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
